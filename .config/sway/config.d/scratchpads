# exec scratchpad on start and hide

set $sp-size 1155 715

exec $term --class sp-term
exec $term --class sp-lf -e lf
exec $term --class sp-cal -e calcurse
exec $term --class sp-mus -e ncmpcpp
exec $term --class sp-nmt -e nmtui
exec $term --class sp-htop -e htop

for_window [app_id="sp-term"] move scratchpad, resize set $sp-size
for_window [app_id="sp-lf"] move scratchpad, resize set $sp-size
for_window [app_id="sp-cal"] move scratchpad, resize set $sp-size
for_window [app_id="sp-mus"] move scratchpad, resize set $sp-size
for_window [app_id="sp-nmt"] move scratchpad, resize set $sp-size
for_window [app_id="sp-htop"] move scratchpad, resize set $sp-size

bindsym $mod+Shift+Return [app_id="sp-term"] scratchpad show
bindsym $mod+e [app_id="sp-lf"] scratchpad show
bindsym $mod+c [app_id="sp-cal"] scratchpad show
bindsym $mod+Shift+m [app_id="sp-mus"] scratchpad show
bindsym $mod+Ctrl+n [app_id="sp-nmt"] scratchpad show
bindsym $mod+r [app_id="sp-htop"] scratchpad show

